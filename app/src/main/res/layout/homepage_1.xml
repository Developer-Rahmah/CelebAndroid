<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:id="@+id/homepage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:elevation="0dp"
        app:layout_behavior="com.celebritiescart.celebritiescart.customs.AppBarFlingScrollBehavior">



    </android.support.design.widget.AppBarLayout>

    <!--UM's Code -->
    <android.support.v4.widget.SwipeRefreshLayout

        android:id="@+id/swipeContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/parentScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/banner_height">

                    <com.daimajia.slider.library.SliderLayout

                        android:id="@+id/banner_slider"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        custom:auto_cycle="true"
                        custom:indicator_visibility="visible" />

                    <com.daimajia.slider.library.Indicators.PagerIndicator
                        android:id="@+id/banner_slider_indicator"
                        style="@style/AndroidImageSlider_Indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        app:selected_color="@color/colorPrimary"
                        app:unselected_color="@color/windowBackground" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="5dp"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/celeb_title"
                        android:text="@string/celebrities"
                        android:textStyle="bold"
                        android:textColor="@color/black" />


                    <TextView
                        android:id="@+id/seeAllCeleb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="seeAllCelebs"
                        android:text="@string/see_all"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/home_section_header_line_height"

                        android:layout_toEndOf="@id/celeb_title"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:background="@color/home_section_header_line_color" />

                </RelativeLayout>

                <include
                    android:id="@+id/celebritiesProgressBar"

                    layout="@layout/layout_progress_dialog"
                    android:visibility="gone" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/cele"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"

                    android:paddingBottom="5dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="5dp"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"

                        android:id="@+id/featured_brands_title"
                        android:text="@string/featured_brands"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="seeAllBrands"
                        android:text="@string/see_all"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/home_section_header_line_height"

                        android:layout_toEndOf="@id/featured_brands_title"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:background="@color/home_section_header_line_color" />
                </RelativeLayout>

                <include
                    android:id="@+id/featured_brands_progress_bar"

                    layout="@layout/layout_progress_dialog"
                    android:visibility="gone" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/featured_brands"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:paddingBottom="5dp" />



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="5dp"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"

                        android:id="@+id/brands_title"
                        android:text="@string/exclusive_brands"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="seeAllBrandsExculisive"
                        android:text="@string/see_all"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/home_section_header_line_height"

                        android:layout_toEndOf="@id/brands_title"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:background="@color/home_section_header_line_color" />
                </RelativeLayout>

                <include
                    android:id="@+id/brandsProgressBar"

                    layout="@layout/layout_progress_dialog"
                    android:visibility="gone" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/exclusivePicks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:paddingBottom="5dp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="5dp"
                    android:weightSum="5">

                    <TextView
                        android:id="@+id/categories_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.7"
                        android:text="@string/all_categories"
                        android:textStyle="bold"

                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="seeAllCategories"
                        android:text="@string/see_all"
                        android:textAlignment="center"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/colorPrimary" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/home_section_header_line_height"

                        android:layout_toEndOf="@id/categories_title"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:background="@color/home_section_header_line_color" />

                </RelativeLayout>

                <include
                    android:id="@+id/categoriesProgressBar"

                    layout="@layout/layout_progress_dialog"
                    android:visibility="gone" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/allCategories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:paddingBottom="5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:padding="5dp"
                    android:weightSum="2"
                    custom:ignore="ExtraText">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="seeAllTProducts">

                        <ImageView
                            android:id="@+id/trending_now_img"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:adjustViewBounds="true"
                            android:background="@null"
                            android:contentDescription="TODO"
                            android:scaleType="centerCrop"

                          />

                        <TextView
                            android:visibility="invisible"
                            android:layout_width="116dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:clickable="false"
                            android:lines="2"
                            android:maxLines="2"
                            android:text="@string/trending_now"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="24sp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:clickable="true"

                        android:focusable="true"
                        android:onClick="seeAllNewProducts">

                        <ImageView
                            android:id="@+id/new_products_img"

                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:adjustViewBounds="true"
                            android:background="@null"
                            android:contentDescription="TODO"
                            android:scaleType="centerCrop"
                             />

                        <TextView
                            android:visibility="invisible"
                            android:layout_width="116dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:clickable="false"
                            android:lines="2"
                            android:maxLines="2"
                            android:text="@string/new_products"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="24sp" />
                    </FrameLayout>

                    />
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/rl_video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="5dp"
                    android:visibility="gone"
                    android:weightSum="5">

                    <TextView
                        android:id="@+id/video_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"

                        android:text="@string/video_tutorials"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/tv_videos_see_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="seeAllVideos"
                        android:text="@string/see_all"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/home_section_header_line_height"

                        android:layout_toEndOf="@id/video_title"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:background="@color/home_section_header_line_color" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_video"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:padding="5dp"
                    android:weightSum="2"
                    android:visibility="gone"
                    custom:ignore="ExtraText">

                    <include
                        android:id="@+id/videosProgressBar"
                        layout="@layout/layout_progress_dialog"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:visibility="gone" />

                    <FrameLayout
                        android:id="@+id/video1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/video1Img"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:adjustViewBounds="true"
                            android:background="@null"
                            android:contentDescription="TODO"
                            android:scaleType="fitXY"
                            android:src="@drawable/vdo_1" />

                        <ImageButton
                            android:id="@+id/video1Play"
                            android:layout_width="62dp"
                            android:layout_height="62dp"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:scaleType="centerCrop"

                            android:src="@drawable/play_btn" />

                        <TextView
                            android:id="@+id/video1Title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:gravity="center_vertical"
                            android:paddingStart="10dp"
                            android:background="#CC000000"

                            android:clickable="false"
                            android:lines="2"
                            android:maxLines="2"
                            android:text="5 Reasons To Keep Your Beauty Salon Reservation"
                            android:textAlignment="viewStart"
                            android:textColor="@color/white"
                            android:textSize="11sp" />







                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/video2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"

                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/video2Img"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:adjustViewBounds="true"
                            android:background="@null"
                            android:contentDescription="TODO"
                            android:scaleType="fitXY"
                            android:src="@drawable/vdo_2" />

                        <ImageButton
                            android:id="@+id/video2Play"
                            android:layout_width="62dp"
                            android:layout_height="62dp"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:scaleType="centerCrop"
                            android:src="@drawable/play_btn" />

                        <TextView
                            android:id="@+id/video2Title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:clickable="false"
                            android:gravity="center_vertical"
                            android:paddingStart="10dp"
                            android:background="#CC000000"
                            android:lines="2"
                            android:maxLines="2"
                            android:text="5 Reasons To Keep Your Beauty Salon Reservation"
                            android:textAlignment="viewStart"
                            android:textColor="@color/white"
                            android:textSize="11sp" />
                    </FrameLayout>

                    />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_video_coming_soon"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:padding="5dp"
                    android:weightSum="2"
                    android:visibility="gone"
                    custom:ignore="ExtraText">



                    <FrameLayout
                        android:id="@+id/video_coming_soon"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="2"
                        android:background="@drawable/bg_border_black"

                        android:clickable="true"
                        android:focusable="true">

                     <TextView
                         android:id="@+id/tv_coming_soon"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/txt_coming_soon"
                         android:textColor="@color/black"
                         android:layout_gravity="center"
                         android:textSize="24dp"
                         />






                    </FrameLayout>



                    />
                </LinearLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_scrollFlags="scroll">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/banner_height">

                            <com.daimajia.slider.library.SliderLayout

                                android:id="@+id/banner_slider1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                custom:auto_cycle="true"
                                custom:indicator_visibility="visible" />

                            <com.daimajia.slider.library.Indicators.PagerIndicator
                                android:id="@+id/banner_slider_indicator1"
                                style="@style/AndroidImageSlider_Indicator"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="5dp"
                                app:selected_color="@color/colorPrimary"
                                app:unselected_color="@color/windowBackground" />

                        </RelativeLayout>


                    </LinearLayout>

                </FrameLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="5dp"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/boutique_title"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:text="@string/my_boutiques_pick"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="seeAllProducts"
                        android:text="@string/see_all"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/home_section_header_line_height"

                        android:layout_toEndOf="@id/boutique_title"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:background="@color/home_section_header_line_color" />

                </RelativeLayout>


                <include
                    android:id="@+id/productsProgressBar"
                    layout="@layout/layout_progress_dialog"
                    android:visibility="gone" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/mypicks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:paddingBottom="5dp" />







                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/dividerDark" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:padding="5dp"
                    android:weightSum="2"
                    custom:ignore="ExtraText">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="seeAllSProducts">

                        <ImageView
                            android:id="@+id/sp1_img"

                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:adjustViewBounds="true"
                            android:background="@null"
                            android:contentDescription="TODO"
                            android:scaleType="centerCrop"

                            />


                        <TextView
                            android:visibility="invisible"
                            android:layout_width="146dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|center_horizontal"
                            android:clickable="false"
                            android:lines="2"
                            android:maxLines="2"
                            android:text="@string/special_collection"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="24sp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="seeAllBrands">
<!--android:onClick=seeAllSProducts-->
                        <ImageView
                            android:id="@+id/sp2_img"

                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:adjustViewBounds="true"
                            android:background="@null"
                            android:contentDescription="TODO"
                            android:scaleType="centerCrop"
                            />

                        <TextView
                            android:visibility="invisible"
                            android:id="@+id/tv_special_collection"
                            android:layout_width="146dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:clickable="false"
                            android:lines="2"
                            android:maxLines="2"
                            android:text="@string/all_brands"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="24sp" />
                    </FrameLayout>

                    />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_scrollFlags="scroll">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/banner_height">

                            <com.daimajia.slider.library.SliderLayout

                                android:id="@+id/banner_slider2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                custom:auto_cycle="true"
                                custom:indicator_visibility="visible" />

                            <com.daimajia.slider.library.Indicators.PagerIndicator
                                android:id="@+id/banner_slider_indicator2"
                                style="@style/AndroidImageSlider_Indicator"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="5dp"
                                app:selected_color="@color/colorPrimary"
                                app:unselected_color="@color/windowBackground" />

                        </RelativeLayout>


                    </LinearLayout>

                </FrameLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="5dp"
                    android:visibility="gone"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/shop_look_title"
                        android:text="@string/shop_the_look"
                        android:textStyle="bold"

                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/tv_shop_see_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:clickable="true"
                        android:onClick="seeAllVideos"
                        android:text="@string/see_all"
                        android:textAlignment="center"

                        android:layout_alignParentEnd="true"
                        android:textColor="@color/colorPrimary" />

                    <View
