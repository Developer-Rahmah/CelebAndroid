<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:visibility="gone"
        >

        <TextView
            android:id="@+id/cart_item_title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="@string/product_title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/textColorSecondaryDark"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp" />

        <TextView
            android:id="@+id/cart_item_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginTop="3dp"
            android:text="@string/category"
            android:textSize="14sp"
            android:textColor="@color/textColorSecondaryLight"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp" />

    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        >

        <ImageButton
            android:id="@+id/cart_item_removeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_close_black_24dp" />

        <ImageView
            android:id="@+id/cart_item_cover"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/placeholder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_price"
                    android:textColor="@color/textColorSecondaryDark"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cart_item_base_price1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="$00.0"
                    android:textColor="@color/textColorSecondaryDark"
                    android:textSize="14sp" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/cart_item_attributes_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cart_item_title"
                        android:layout_width="@dimen/lg_card_cover_width"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:maxLines="2"
                        android:paddingBottom="17dp"
                        android:text="@string/product_title"
                        android:textColor="@color/textColorSecondaryDark"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/cart_item_sub_price"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:maxLines="2"
                        android:text="$00.0"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/cart_item_base_price"
android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:maxLines="2"
                        android:text="$00.0"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:gravity="center_vertical"
                    android:layoutDirection="ltr"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatImageButton
                        android:id="@+id/cart_item_quantity_plusBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_add_circle_outline_black_24dp" />

                    <TextView
                        android:id="@+id/cart_item_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:text="1x"
                        android:textColor="@color/textColorSecondaryDark"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <android.support.v7.widget.AppCompatImageButton
                        android:id="@+id/cart_item_quantity_minusBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_remove_circle_outline_black_24dp" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_price"
                    android:textColor="@color/textColorSecondaryDark"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cart_item_sub_price1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="$00.0"
                    android:textColor="@color/colorAccentGreen"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@color/dividerLight" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|end"
        android:padding="10dp"
        android:visibility="gone"
        >

        <Button
            android:id="@+id/cart_item_viewBtn1"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:text="@string/view"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="@drawable/rounded_corners_button_gray" />

        <!--<ImageButton-->
            <!--android:id="@+id/cart_item_removeBtn"-->
            <!--android:layout_width="80dp"-->
            <!--android:layout_height="25dp"-->
            <!--android:src="@drawable/ic_delete_forever"-->
            <!--android:scaleType="fitCenter"-->
            <!--android:tint="@color/white"-->
            <!--android:layout_marginStart="10dp"-->
            <!--android:background="@drawable/rounded_corners_button_red" />-->

    </LinearLayout>


</LinearLayout>
